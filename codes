#include <iostream>
#include "BigNumber.h"

using namespace std;


void bigFact(int n,BigNumber &ans) {
    BigNumber
    tmpF;
    
    ans.set(1);
    
    for (int m =2 , m<=n, m++){
        
        tmpF.set(m);
        
        ans.mul2(tmpF);
    }
}

void bigPow(int base, int exp, BigNumber &ans){
    BigNumber
    tmpBase;

    
    ans.set(1);
   

    tmpBase.set(base);
    
    for(int i = 0; i<exp; i++){
        ans.mul2(tmpBase);
            }
}



void bigChoose(int n,int m, BigNumber &ans){
    BigNumber tmp;
    
    if(m>n){
        ans.set(0);
        return;
    }
    
    ans.set(1);
    
    if(m> n-m)
        m = n-m;
    
    for(int den = 1; den<=m; den++){
        tmp.set(n-den+1);
    ans.mul2(tmp);

    ans.divide(den);



    }

}

int main() {

    BigNumber
    ans, tmp;

    
    bigFact(8,ans);

    
    bigPow(3,7,tmp);

    
    ans.mul2(tmp);

    
    bigFact(12,tmp);

    
    ans.mul2(tmp);

    
    bigPow(2,10,tmp);

    
    ans.mul2(tmp);

   


    


    

    return 0;
}


